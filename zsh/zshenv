typeset -xT SUDO_PATH sudo_path
sudo_path=(
    /usr/local/sbin(N-/)
    /usr/sbin(N-/)
    /sbin(N-/)
    /opt/sbin(N-/)
)

export EDITOR=`if where vim > /dev/null; then
    echo =vim
else
    echo =vi
fi`

export PAGER=`if where lv > /dev/null; then
    echo =lv
else
    echo =less
fi`

# vim:set ft=sh fenc=utf-8 ts=4 sw=4 sts=4 et:

# edited by ssd
typeset -U path
path=(
        /user/local/bin(N-/)
        #nodebrew
      $HOME/.nodebrew/current/bin(N-/)
    	$HOME/local/sbin(N-/)
    	$HOME/local/bin(N-/)
    	$path
		/usr/local/mysql/bin/(N-/)
		/usr/local/mysql/support-files/(N-/)
        /Development/SDK/FlexSDK/bin(N-/)
        /Development/SDK/swfmill-0.3.2/(N-/)
        /Development/Projects/nicoseiga/solr/setting(N-/)
        #npm
        /usr/local/share/npm/bin(N-/)
)
	

##### java encoding #####
#export JAVA_HOME="/Library/Java/Home"
export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.7.0_40.jdk/Contents/Home"
export PATH="$PATH:$JAVA_HOME/bin"
export JAVA_OPTIONS="-Dfile.encodeing=UTF-8"
alias javac="javac -J-Dfile.encoding=utf-8"
alias java="java -Dfile.encoding=UTF-8"

##### groovy encoding #####
#export JAVA_HOME="/Library/Java/Home"
